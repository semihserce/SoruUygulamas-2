<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrtaActivity">

    <RelativeLayout
        android:background="#2c3e50"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:id="@+id/baslik"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/puan"
            android:text="Skor : 0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:id="@+id/isim_oyun"
            android:text="İsim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:padding="16dp"
        android:background="#3498db"
        android:layout_below="@id/baslik"
        android:layout_above="@id/alt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_alignParentRight="true"
            android:background="@drawable/anasayfa"
            android:id="@+id/anasayfayagit"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:text="Sorular"
            android:textSize="20sp"
            android:id="@+id/sorular"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:background="#1abc9c"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/gec"
            android:padding="5dp"
            android:layout_width="80dp"
            android:layout_height="40dp">
            <TextView
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:text="Geç"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_alignParentRight="true"
                android:textColor="#ffffff"
                android:text="8"
                android:id="@+id/gecsayi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:background="#2c3e50"
        android:id="@+id/alt"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageButton
            android:src="@drawable/ic_action_dogru"
            android:layout_weight="1"
            android:id="@+id/dogrug"
            android:layout_margin="3dp"
            android:background="#2ecc71"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
        <ImageButton
            android:src="@drawable/ic_action_yanlis"
            android:layout_weight="1"
            android:id="@+id/yanlısg"
            android:layout_margin="3dp"
            android:background="#e74c3c"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />
    </LinearLayout>
</RelativeLayout>