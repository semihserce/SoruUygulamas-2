<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3498db"
    tools:context=".MainActivity">

 <TextView
     android:layout_marginTop="40dp"
     android:layout_centerHorizontal="true"
     android:textSize="40sp"
     android:textColor="#ffff"
     android:text="Quiz App"
     android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/kolay"
            android:background="#34495e"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp">
        <TextView
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_centerInParent="true"
            android:text="Kolay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/b_kolay"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Skor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/orta"
            android:background="#34495e"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="Orta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/b_orta"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Skor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/zor"
            android:background="#34495e"
            android:layout_margin="10dp"
            android:layout_width="200dp"
            android:layout_height="40dp">
            <TextView
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:layout_centerInParent="true"
                android:text="Zor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/b_zor"
                android:layout_marginRight="5dp"
                android:textColor="#ffffff"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="Skor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:layout_marginBottom="80dp"
        android:layout_alignParentBottom="true"
        android:textSize="12sp"
        android:layout_above="@+id/kullaniciadi"
        android:textColor="#ffffff"
        android:text="Hoşgeldin,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/kullaniciadi"
        android:layout_marginBottom="59dp"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:text="Kullanıcı,"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:id="@+id/kadi_duzenle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/textView"
        android:layout_toRightOf="@+id/kullaniciadi"
        android:src="@drawable/ic_action_kullaniciadi" />

</RelativeLayout>